{
	"root": true,
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["@typescript-eslint", "prettier"],
	"rules": {
		"eqeqeq": "warn",
		"no-throw-literal": "warn",
		"prettier/prettier": "warn"
	},
	"ignorePatterns": ["dist", "**/*.d.ts"]
}
