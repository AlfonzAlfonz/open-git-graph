{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"target": "esnext",
		"lib": ["ES2020", "DOM", "esnext"],
		"sourceMap": true,
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"jsx": "react-jsx",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"allowJs": true,
		"checkJs": true,
		"noEmit": true
	},
	"include": ["src/**/*", "test/**/*", "tools/**/*"]
}
