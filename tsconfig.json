{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ES2020",
		"outDir": "./extension/runtime",
		"lib": ["ES2020", "DOM"],
		"sourceMap": false,
		"rootDir": "src",
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"skipLibCheck": true
	}
}
